{
    "name": "@abyss/app",
    "version": "0.0.11",
    "description": "Abyss AI Desktop Application",
    "author": {
        "name": "A Developer!"
    },
    "main": "dist-electron/main/index.mjs",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "drizzle": "drizzle-kit push:sqlite",
        "build:mac": "vite build && electron-builder build --mac",
        "publish:mac": "vite build && electron-builder build --mac --publish always",
        "bump": "npm version patch"
    },
    "dependencies": {
        "electron-updater": "^6.3.9",
        "react-dom": "^18.2.0",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@headlessui/tailwindcss": "^0.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.20",
        "electron": "^34.2.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^6.1.1",
        "vite-plugin-electron": "^0.28.0",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "build": {
        "appId": "com.aerrobert.abyss",
        "productName": "Abyss",
        "directories": {
            "output": "dist"
        },
        "electronVersion": "34.2.0",
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "mac": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                },
                "dmg"
            ],
            "artifactName": "${productName}-${version}-${arch}-mac.zip",
            "icon": "../../build/icon.icns"
        },
        "publish": {
            "provider": "github",
            "owner": "eric-aerrober",
            "repo": "Abyss"
        }
    }
}
